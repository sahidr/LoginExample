<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idbcgroup.loginexample.GreenPointRegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Green Point Register" />

    <ImageView
        android:id="@+id/greenpoint"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@android:drawable/screen_background_dark_transparent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="@string/location"
        android:layout_below="@+id/greenpoint"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/sign_up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/stemSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/stem_size"
        android:inputType="number"
        android:layout_below="@+id/canopySize"
        android:layout_alignLeft="@+id/canopySize"
        android:layout_alignStart="@+id/canopySize"
        android:layout_alignRight="@+id/canopySize"
        android:layout_alignEnd="@+id/canopySize" />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/stemSize"
        android:layout_alignRight="@+id/stemSize"
        android:layout_below="@+id/stemSize"
        android:ems="10"
        android:hint="@string/height"
        android:inputType="number"
        android:layout_alignLeft="@+id/stemSize"
        android:layout_alignStart="@+id/stemSize" />

    <AutoCompleteTextView
        android:id="@+id/treeType"
        android:hint="@string/tree_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/height"
        android:layout_alignLeft="@+id/height"
        android:layout_alignRight="@+id/height"
        android:layout_alignStart="@+id/height"
        android:layout_below="@+id/height" />

    <EditText
        android:id="@+id/canopySize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:hint="@string/canopy"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
