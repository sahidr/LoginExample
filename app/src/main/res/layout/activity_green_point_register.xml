<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idbcgroup.loginexample.GreenPointRegisterActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Green Point Register" />

    <ImageView
        android:id="@+id/greenpoint"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@android:drawable/screen_background_dark_transparent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:textSize="10sp"
        android:text="Location"
        android:layout_below="@+id/greenpoint"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="SAVE" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save"
        android:layout_alignBottom="@+id/save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:onClick="cancelClick"
        android:text="CANCEL" />

    <EditText
        android:id="@+id/gp_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/greenpoint"
        android:layout_alignStart="@+id/greenpoint"
        android:layout_below="@+id/location"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Description"
        android:inputType="textPersonName" />

</RelativeLayout>
